<section class="container password_reset_new">
    <h1>Forgot password</h1>
    <span>Put your Email here:--</span>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(:password_reset, url: password_resets_path) do |f| %>
                <%= f.label "Email" %>
                <%= f.email_field :username, class: 'form-control', placeholder: "email....." %><br>
                <%= f.submit "Submit", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</section>
