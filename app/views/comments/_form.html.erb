<section class="container">
    <%= form_for ([@feature, @feature.comments.build]), remote: true do |f| %>
        <div class="field">
            <div class="control">
                <%= f.hidden_field :name, value: current_user.firstname  %>
            </div>
            <div class="control">
                <%= f.rich_text_area :body, input_html: { class: 'textarea' }, wrapper:false, label_html: { class: 'label' }, placeholder: "Comment ....", class: "form-control",id: "Comment"  %>
            </div>
        </div><br>
        <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>   
</section>




